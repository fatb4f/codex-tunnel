[Unit]
Description=Caddy
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
User=src404
Group=src404
WorkingDirectory=/home/src404/src/codex-fastmcp
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
ExecStart=/usr/bin/caddy run --config /home/src404/src/codex-fastmcp/Caddyfile
ExecReload=/usr/bin/caddy reload --config /home/src404/src/codex-fastmcp/Caddyfile
TimeoutStopSec=5s
LimitNOFILE=1048576
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
